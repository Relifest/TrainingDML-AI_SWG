{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/opengeospatial/TrainingDML-AI_SWG/main/schemas/1.1/json_schema/ai_trainingData.json",
    "title": "AI_AbstractTrainingData",
    "type": "object",
    "required": [
        "id",
        "labels"
    ],
    "properties": {
        "datasetId": {
            "type": "string"
        },
        "dataSources": {
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "uri-reference"
                    },
                    "minItems": 1
                },
                {
                    "type": "array",
                    "items": {
                        "$ref": "https://raw.githubusercontent.com/opengeospatial/TrainingDML-AI_SWG/main/schemas/1.1/json_schema/ci_citation.json"
                    }
                }
            ]
        },
        "id": {
            "type": "string"
        },
        "numberOfLabels": {
            "type": "integer"
        },
        "labels": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/opengeospatial/TrainingDML-AI_SWG/main/schemas/1.1/json_schema/ai_label.json"
            },
            "minItems": 1
        },
        "labeling": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/opengeospatial/TrainingDML-AI_SWG/main/schemas/1.1/json_schema/ai_labeling.json"
            }
        },
        "trainingType": {
            "$ref": "https://raw.githubusercontent.com/opengeospatial/TrainingDML-AI_SWG/main/schemas/1.1/json_schema/ai_trainingTypeCode.json"
        },
        "quality": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/opengeospatial/TrainingDML-AI_SWG/main/schemas/1.1/json_schema/dataQuality.json"
            }
        }
    }
}